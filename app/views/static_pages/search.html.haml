%header.clearfix
  .col-xs-5.col-sm-3.col-md-3
    = t('search')
.container-fluid
  = simple_form_for(:search,
                    url: search_index_path,
                    method: :get,
                    html: { class: 'form-horizontal' },
                    defaults: { input_html: { class: 'form-control' } }) do |form|
    = form.select :web_service, options_for_select(['select web service'] + web_services_name)
    = form.input :name, as: :string
    = form.button :submit, value: 'Search', class: 'btn.btn-default'
