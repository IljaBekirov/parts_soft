:javascript
  $(document).ready(function () {
    //Для xs-устройств сворачиваем или разворачиваем меню
    $('[data-toggle="offcanvas"]').click(function () {
        $('#side-menu').toggleClass('hidden-xs');
    });
    //Показ или скрытие иконок для развернутого или скрытого меню
    $('[data-toggle="collapse"]').click(function() {
      var isExpanded = $(this).attr("aria-expanded");
      if (isExpanded == 'true') {
        $(this).children('.menu-down').show();
        $(this).children('.menu-up').hide();
      } else {
        $(this).children('.menu-down').hide();
        $(this).children('.menu-up').show();
      }
    });
  });
