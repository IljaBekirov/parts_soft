%header.clearfix
  .col-xs-5.col-sm-3.col-md-3
    = t('check_price')
  .col-xs-7.col-sm-9.col-md-9
.content-inner
  %table.table.table-hover
    %thead
      %tr
        %th= 'Photo'
        %th= 'Number'
        %th= 'Brand'
        %th= 'Title'
        %th= 'Quantity'
        %th= 'Price'
        %th= 'Price with coefficient'
    %tbody
      %tr
      - @resources.each do |item|
        %tr
          %td= image_tag(item[:sys_info][:goods_img_url], height: '32', class: "scale")
          %td= item[:oem]
          %td= item[:make_name]
          %td= item[:detail_name]
          %td= item[:qnt]
          %td= item[:cost]
          %td= item[:price_with_coef]